<UserControl x:Class="UGRS.Core.Application.UC.Buttons.UCSaveOrCancelButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UGRS.Core.Application"
             mc:Ignorable="d"
             d:DesignHeight="46" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnCancel" Grid.Column="2" Grid.Row="0" Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Center" Click="btnCancel_Click" x:FieldModifier="public" />
        <Button x:Name="btnSave" Grid.Column="1" Grid.Row="0" Content="Guardar" HorizontalAlignment="Right" VerticalAlignment="Center" x:FieldModifier="public" />
    </Grid>
</UserControl>
